{
  "$id": "sheratan.value.schema.v1",
  "type": "object",
  "required": [
    "id",
    "label",
    "semantics",
    "timeline",
    "provenance",
    "value"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]{3,64}$"
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "semantics": {
      "type": "object",
      "required": [
        "domain",
        "scale"
      ],
      "properties": {
        "domain": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        },
        "scale": {
          "type": "string",
          "enum": [
            "ratio",
            "interval",
            "ordinal",
            "nominal",
            "percent_0_100"
          ]
        },
        "range": {
          "type": "object",
          "properties": {
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            }
          }
        },
        "meaning": {
          "type": "string"
        }
      }
    },
    "timeline": {
      "type": "object",
      "required": [
        "clock",
        "sample_ms",
        "validity"
      ],
      "properties": {
        "clock": {
          "type": "string",
          "enum": [
            "video_ms",
            "system_ms",
            "logical_tick"
          ]
        },
        "sample_ms": {
          "type": "integer",
          "minimum": 1
        },
        "validity": {
          "type": "object",
          "required": [
            "t0_ms",
            "t1_ms"
          ],
          "properties": {
            "t0_ms": {
              "type": "integer"
            },
            "t1_ms": {
              "type": "integer"
            }
          }
        }
      }
    },
    "provenance": {
      "type": "object",
      "required": [
        "source_type",
        "method"
      ],
      "properties": {
        "source_type": {
          "type": "string",
          "enum": [
            "observed",
            "derived",
            "manual",
            "inferred"
          ]
        },
        "source_ref": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "params": {
          "type": "object"
        }
      }
    },
    "modulation": {
      "type": "object",
      "properties": {
        "pipeline": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "op"
            ],
            "properties": {
              "op": {
                "type": "string",
                "enum": [
                  "normalize",
                  "clamp",
                  "ema",
                  "sma",
                  "baseline_subtract",
                  "gain"
                ]
              },
              "params": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "quality": {
      "type": "object",
      "properties": {
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "latency_ms": {
          "type": "integer",
          "minimum": 0
        },
        "stability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "value": {
      "type": "object",
      "required": [
        "kind",
        "current"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "scalar",
            "event",
            "state"
          ]
        },
        "current": {
          "type": "number"
        },
        "series": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "t_ms",
              "v"
            ],
            "properties": {
              "t_ms": {
                "type": "integer"
              },
              "v": {
                "type": "number"
              }
            }
          }
        }
      }
    }
  }
}