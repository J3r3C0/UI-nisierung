{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "coupling-schema.json",
    "title": "CouplingGraph v1 (Causal++ Spec v1)",
    "type": "object",
    "required": [
        "meta",
        "nodes",
        "edges"
    ],
    "properties": {
        "meta": {
            "type": "object",
            "required": [
                "id",
                "version",
                "timebase"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1
                },
                "version": {
                    "type": "string",
                    "minLength": 1
                },
                "timebase": {
                    "type": "string",
                    "enum": [
                        "video",
                        "system"
                    ]
                },
                "defaults": {
                    "type": "object",
                    "properties": {
                        "max_skew_ms": {
                            "type": "integer",
                            "default": 250
                        },
                        "impact_mode": {
                            "type": "string",
                            "enum": [
                                "blend",
                                "replace"
                            ],
                            "default": "blend"
                        },
                        "blend_normalize": {
                            "type": "boolean",
                            "default": false
                        }
                    }
                }
            }
        },
        "nodes": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "value_id"
                ],
                "properties": {
                    "value_id": {
                        "type": "string"
                    }
                }
            }
        },
        "edges": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "type",
                    "from",
                    "to",
                    "alignment",
                    "impact",
                    "aggregation",
                    "guardrails"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "hard_sync",
                            "soft_sync",
                            "event",
                            "causal"
                        ]
                    },
                    "from": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "priority": {
                        "type": "integer",
                        "default": 0
                    },
                    "alignment": {
                        "type": "object",
                        "required": [
                            "mode",
                            "offset_ms",
                            "max_skew_ms"
                        ],
                        "properties": {
                            "mode": {
                                "type": "string",
                                "enum": [
                                    "hard_sync",
                                    "soft_sync"
                                ]
                            },
                            "offset_ms": {
                                "type": "integer"
                            },
                            "max_skew_ms": {
                                "type": "integer"
                            }
                        }
                    },
                    "impact": {
                        "type": "object",
                        "required": [
                            "function",
                            "gain",
                            "clamp"
                        ],
                        "properties": {
                            "function": {
                                "type": "string",
                                "enum": [
                                    "add",
                                    "mul",
                                    "set",
                                    "linear"
                                ]
                            },
                            "mode": {
                                "type": "string",
                                "enum": [
                                    "replace",
                                    "blend"
                                ]
                            },
                            "gain": {
                                "type": "number"
                            },
                            "weight": {
                                "type": "number",
                                "default": 1.0
                            },
                            "clamp": {
                                "type": "array",
                                "minItems": 2,
                                "maxItems": 2
                            }
                        }
                    },
                    "aggregation": {
                        "type": "object",
                        "properties": {
                            "when_multiple_edges": {
                                "type": "string"
                            }
                        }
                    },
                    "guardrails": {
                        "type": "object",
                        "properties": {
                            "enabled": {
                                "type": "boolean"
                            },
                            "min_confidence": {
                                "type": "number"
                            }
                        }
                    },
                    "gate": {
                        "type": "object",
                        "properties": {
                            "max_skew_ms": {
                                "type": "integer"
                            }
                        }
                    },
                    "trigger": {
                        "type": "object",
                        "properties": {
                            "kind": {
                                "type": "string"
                            },
                            "hold_ms": {
                                "type": "integer"
                            },
                            "delay_ms": {
                                "type": "integer",
                                "default": 0
                            }
                        }
                    }
                }
            }
        }
    }
}